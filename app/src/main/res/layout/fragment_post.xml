<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:id="@+id/PagerView" android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0">
    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/PagerView" android:id="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/localistaionText" android:layout_weight="1"
                android:gravity="center" android:textAlignment="center"/>

        <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                app:spi_dotColor="@color/secondary"
                app:spi_dotSelectedColor="@color/secondaryDark"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateText"
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_weight="1" android:textAlignment="center"/>

    </LinearLayout>


    <TextView
            android:id="@+id/Title"
            style="@style/word_title"
            android:layout_width="match_parent"
            android:background="@color/primary"
            android:text="@string/example_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:layout_height="35dp" android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>

    <TextView
            android:id="@+id/TextContnet"
            android:background="@color/primary"
            style="@style/word_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/Title" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>




</androidx.constraintlayout.widget.ConstraintLayout>