<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/secondary"
              android:divider="@color/colorPrimary" android:layout_weight="1">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="276dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageView" android:scaleType="fitStart"/>
    <TextView
            android:id="@+id/Title"
            style="@style/word_title"
            android:layout_width="match_parent"
            android:background="@color/secondary"
            android:text="@string/example_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center" android:layout_height="match_parent"/>
    <TextView
            android:id="@+id/TextContnet"
            android:background="@color/secondary"
            style="@style/word_title"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:text="XDD"
            android:ellipsize="end"
            android:maxLines="4"
            android:textSize="18sp" android:textAlignment="viewStart"/>
</LinearLayout>  <!-- Ogarnąć czcionki -->